<div id="board">

	<div class="wgo-infobox">

		<div class="wgo-box-wrapper wgo-player-wrapper wgo-white">
			<div class="wgo-box-title" id="userW">Guest 1</div>
			<div class="wgo-player-info">
				<div class="wgo-player-info-box-wrapper">
					<div class="wgo-player-info-box">
						<div class="wgo-player-info-title">Rank</div>
						<div class="wgo-player-info-value">5p</div>
					</div>
				</div>
				<div class="wgo-player-info-box-wrapper">
					<div class="wgo-player-info-box">
						<div class="wgo-player-info-title">Caps</div>
						<div class="wgo-player-info-value" id="capcountW">0</div>
					</div>
				</div>
				<div class="wgo-player-info-box-wrapper">
					<div class="wgo-player-info-box">
						<div class="wgo-player-info-title">Time</div>
						<div class="wgo-player-info-value" id="counter-white">--:--</div>
					</div>
				</div>
			</div>
		</div>

		<div class="wgo-box-wrapper wgo-player-wrapper wgo-black">
			<div class="wgo-box-title" id="userB">Guest 2</div>
			<div class="wgo-player-info">
				<div class="wgo-player-info-box-wrapper">
					<div class="wgo-player-info-box">
						<div class="wgo-player-info-title">Rank</div>
						<div class="wgo-player-info-value">9p</div>
						<!-- !!! Figure out how to get Rank in here -->
					</div>
				</div>
				<div class="wgo-player-info-box-wrapper">
					<div class="wgo-player-info-box">
						<div class="wgo-player-info-title">Caps</div>
						<div class="wgo-player-info-value" id="capcountB">0</div>
					</div>
				</div>
				<div class="wgo-player-info-box-wrapper">
					<div class="wgo-player-info-box">
						<div class="wgo-player-info-title">Time</div>
						<div class="wgo-player-info-value" id="counter-black">--:--</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div id="game-board">
	</div>

	<div class="wgo-buttons">
			<button id='calc-score' class='wgo-button'>Estimate Score</button>
			<button id='game-back' class='wgo-button'>Back to Lobby</button>
			<button id='game-resign' class='wgo-button'>Resign</button>
	</div>
</div>


